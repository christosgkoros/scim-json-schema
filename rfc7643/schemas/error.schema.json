{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SCIM v2 Error Message",
  "type": "object",
  "properties": {
    "schemas": {
      "type": "array",
      "items": {
        "type": "string",
        "const": "urn:ietf:params:scim:api:messages:2.0:Error"
      },
      "minItems": 1,
      "maxItems": 1
    },
    "status": {
      "type": "string",
      "description": "The HTTP status code expressed as a JSON string."
    },
    "scimType": {
      "type": "string",
      "description": "A SCIM detail error keyword. Optional.",
      "enum": [
        "invalidFilter", "tooMany", "uniqueness", "mutability",
        "invalidSyntax", "invalidPath", "noTarget", "invalidValue",
        "invalidVers", "sensitive"
      ]
    },
    "detail": {
      "type": "string",
      "description": "A detailed human-readable message. Optional."
    }
  },
  "required": ["schemas", "status"],
  "additionalProperties": false
}
